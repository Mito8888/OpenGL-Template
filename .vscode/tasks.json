{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "path\\to\\g++.exe",
            "args": [
                "-g",
                "-std=c++17",
                "-I${workspaceFolder}/lib/include",
                "-L${workspaceFolder}/lib/",

                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/glad.c",

                "${workspaceFolder}/src/engine/*.cpp",
                
                "-lglfw3dll",
                "-o",
                "${workspaceFolder}/Executable.exe",

                "-static-libstdc++",
                "-static-libgcc",
                "-static"
            ],
            "options": {
                "cwd": "path\\to\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
